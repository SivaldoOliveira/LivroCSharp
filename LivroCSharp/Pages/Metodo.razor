@page "/metodo"

<h3>Método</h3>
<div class="card"
<h4 class=" "text-info text-center m-3>
    Cálcula de salário
    </h4>
<p>Prezado Sr.@nome</p>
<p>Seu salário bruto e @salario</p>
<p>Seu total de descontos é:@desconto</p>
<p>Seu salário líquido é:@salarioFinal</p>
</div>
<p class="text-center m-3">
    <button class="btn btn-primary" 
    @onclick="calculaSalario">
    Calcular salário
</button>
</p>

@code {
    string nome = "Simol Oliveira";
    double salario = 3500.00;
    double desconto = 150.00;
    double salarioFinal;

    void calculaSalario()
    {
        double descontoIR;

        descontoIR = calculaIR(salario);

        desconto = descontoIR;

        salarioFinal = salario - descontoIR;
    }
    double calculaIR(double salario)
    {
        double resultado;
        resultado = salario * 0.275;

        return resultado;
    }
}
